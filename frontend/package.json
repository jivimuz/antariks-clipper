{
  "name": "antariksclipper",
  "version": "0.1.0",
  "description": "Antariks Clipper - Auto-generate viral highlight clips for Reels & TikTok",
  "author": "PT Antariks Global Technology (Developed by Jivi Muzaqi Guntur)",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev -p 3210",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "export": "next build",
    "electron": "electron .",
    "electron-dev": "concurrently \"cross-env BROWSER=none npm run dev\" \"wait-on http://localhost:3210 && electron .\"",
    "build:backend": "cd ../backend && (build.bat || ./build.sh)",
    "build:frontend": "next build",
    "prebuild:electron": "npm run build:frontend",
    "build:electron": "electron-builder",
    "pack": "npm run build:frontend && electron-builder --dir",
    "dist": "npm run build:frontend && electron-builder",
    "dist:win": "npm run build:frontend && electron-builder --win",
    "dist:mac": "npm run build:frontend && electron-builder --mac",
    "dist:linux": "npm run build:frontend && electron-builder --linux",
    "dist:full": "npm run build:backend && npm run dist"
  },
  "dependencies": {
    "lucide-react": "^0.563.0",
    "next": "^16.1.5",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-hot-toast": "^2.6.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "asar": "^3.2.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-is-dev": "^2.0.0",
    "eslint": "^9",
    "eslint-config-next": "16.1.5",
    "tailwindcss": "^4.1.18",
    "typescript": "^5",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.antariks.clipper",
    "productName": "AntariksClipper",
    "copyright": "Copyright Â© 2026 PT Antariks Global Technology. Developed by Jivi Muzaqi Guntur.",
    "asar": true,
    "asarUnpack": [
      "**/*.node"
    ],
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "out/**/*",
      "electron/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "../backend/dist/antariks-backend",
        "to": "backend",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.ico",
      "artifactName": "AntariksClipper-${version}.${ext}",
      "requestedExecutionLevel": "asInvoker"
    },
    "mac": {
      "target": ["dmg", "zip"],
      "icon": "build/icon.icns",
      "category": "public.app-category.video"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "build/icon.png",
      "category": "Video"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "menuCategory": true,
      "shortcutName": "Antariks Clipper",
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico"
    }
  }
}
